<odoo>
    <record id="view_anaf_declaration_tree" model="ir.ui.view">
        <field name="name">anaf.declaration.tree</field>
        <field name="model">anaf.declaration</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="view_anaf_declaration_form" model="ir.ui.view">
        <field name="name">anaf.declaration.form</field>
        <field name="model">anaf.declaration</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Anaf Declaration">
                <group>
                    <field name="name" />
                </group>
                <notebook colspan="4">
                    <page name="versions" string="Versions">
                        <field name="version_ids" nolabel="1">
                            <tree editable="top">
                                <field name="name" />
                                <field name="model" />
                                <field name="validator" />
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    <record id="action_anaf_declaration_view_menu" model="ir.actions.act_window">
        <field name="name">ANAF Declaration</field>
        <field name="res_model">anaf.declaration</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="menu_action_anaf_configuration"
        name="ANAF Configuration"
        parent="account.account_management_menu"
    />
    <menuitem
        id="menu_action_anaf_declaration"
        name="ANAF Declaration"
        action="action_anaf_declaration_view_menu"
        parent="menu_action_anaf_configuration"
    />
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_anaf_product_code_form" model="ir.ui.view">
        <field name="name">anaf.product.code.form</field>
        <field name="model">anaf.product.code</field>
        <field name="arch" type="xml">
            <form string="ANAF Product Codes">
                <div class="oe_title">
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" />
                        -
                        <field name="description" />
                    </h1>
                </div>
                <field name="parent_id" />
                <field name="child_ids" invisible="1" />
                <field
                    name="product_ids"
                    widget="many2many"
                    attrs="{'readonly': [('child_ids','!=',[])]}"
                />
            </form>
        </field>
    </record>
    <record id="view_anaf_product_code_tree" model="ir.ui.view">
        <field name="name">anaf.product.code.tree</field>
        <field name="model">anaf.product.code</field>
        <field name="arch" type="xml">
            <tree string="ANAF Product Codes">
                <field name="parent_id" />
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <record id="view_anaf_product_code_search" model="ir.ui.view">
        <field name="name">anaf.product.code.search</field>
        <field name="model">anaf.product.code</field>
        <field name="arch" type="xml">
            <search string="ANAF Product Codes">
                <field name="parent_id" />
                <field name="name" />
                <field name="description" />
            </search>
        </field>
    </record>
    <record id="action_anaf_product_code" model="ir.actions.act_window">
        <field name="name">ANAF Product Codes</field>
        <field name="res_model">anaf.product.code</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_anaf_product_code_search" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a code for ANAF declaration.
            </p>
        </field>
    </record>
    <menuitem
        action="action_anaf_product_code"
        id="menu_action_anaf_product_code"
        parent="l10n_ro_declaration.menu_action_anaf_configuration"
        name="ANAF Product Codes"
    />
</odoo>
